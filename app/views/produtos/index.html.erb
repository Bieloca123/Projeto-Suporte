
<div class="album py-5 bg-light">
  <div class="container">

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% @produtos.each do |produto| %>
        <% if produto.valid? %>
          <% unless produto.archived? %>
            <div class="col">
            <div class="card shadow-sm">
              <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em"><%= link_to produto.nome, produto %></text></svg>
  
              <div class="card-body">
                <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <%= link_to "Edit", edit_produto_path(produto), remote: true, class: 'btn btn-primary' %>
                  </div>
                  <small class="text-muted">9 mins</small>
                </div>
              </div>
            </div>
          </div>
          <% end %>
          <% end %>
      <% end %>
      </div>
      <%= link_to "Novo Produto", new_produto_path , remote: true, class: 'btn btn-block btn-lg btn-primary icon-plus' %>
    </div>
  </div>
  <%= render 'produtos/modal' %>